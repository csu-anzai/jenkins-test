pipeline {
    agent any
    options {
        lock('master')
      }
    environment {
        WORKSPACE_DIR = "${env.WORKSPACE}/${env.BRANCH_NAME}"
    }

    stages {
        stage('Startup') {

            parallel {
                stage('Windows') {
                    steps {
                        echo "${env.WORKSPACE}"
                        echo "run-tests-windows"
                        echo " --- branch to build: ${env.BRANCH_NAME}}"
                        echo " --- workspace_dir: ${WORKSPACE_DIR}"
                    }
                    post {
                        always {
                            echo "stage windows"
                        }
                    }
                }
                stage('Linux') {
                    steps {
                        echo "Step test on linuc"
                    }
                    post {
                        always {
                            echo "stage linux"
                        }
                    }
                }
            }
        }
    }

}

